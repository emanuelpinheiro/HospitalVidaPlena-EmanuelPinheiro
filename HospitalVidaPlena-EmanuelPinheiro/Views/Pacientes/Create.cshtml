@model Hospisim.Models.Paciente

@{
    ViewData["Title"] = "Novo Paciente";
}

@if (ViewBag.DbStatus != null)
{
    <div class="alert alert-info">@ViewBag.DbStatus</div>
}

@if (ViewBag.ModelStateErrors != null && ((List<string>)ViewBag.ModelStateErrors).Any())
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in (List<string>)ViewBag.ModelStateErrors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<h2 class="header-custom">Novo Paciente</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="NomeCompleto" class="form-label"></label>
                <input asp-for="NomeCompleto" class="form-control" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CPF" class="form-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DataNascimento" class="form-label"></label>
                <input asp-for="DataNascimento" class="form-control" type="date" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Sexo" class="form-label"></label>
                <input asp-for="Sexo" class="form-control" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TipoSanguineo" class="form-label"></label>
                <input asp-for="TipoSanguineo" class="form-control" />
                <span asp-validation-for="TipoSanguineo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Telefone" class="form-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EnderecoCompleto" class="form-label"></label>
                <input asp-for="EnderecoCompleto" class="form-control" />
                <span asp-validation-for="EnderecoCompleto" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NumeroCartaoSUS" class="form-label"></label>
                <input asp-for="NumeroCartaoSUS" class="form-control" />
                <span asp-validation-for="NumeroCartaoSUS" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EstadoCivil" class="form-label"></label>
                <input asp-for="EstadoCivil" class="form-control" />
                <span asp-validation-for="EstadoCivil" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="PossuiPlanoSaude" class="form-check-input" />
                <label asp-for="PossuiPlanoSaude" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-custom">Salvar</button>
            <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}