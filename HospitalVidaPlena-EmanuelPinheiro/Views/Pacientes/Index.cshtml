                @Html.DisplayFor(modelItem => item.EnderecoCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCartaoSUS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoCivil)
