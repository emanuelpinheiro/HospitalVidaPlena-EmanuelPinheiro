            <th>
                @Html.DisplayNameFor(model => model.Setor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlanoSaudeUtilizado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObservacoesClinicas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusInternacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atendimento.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrevisaoAlta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotivoInternacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quarto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Setor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlanoSaudeUtilizado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObservacoesClinicas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusInternacao)
            </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-custom">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
