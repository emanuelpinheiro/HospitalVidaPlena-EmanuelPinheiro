@model IEnumerable<Hospisim.Models.Internacao>

@{
    ViewData["Title"] = "Internacao";
}

<h1>Internacao</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atendimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrevisaoAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotivoInternacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leito)
            </th>
